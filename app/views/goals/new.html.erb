<h1>New Goal</h1>
<h3>Autogenerated UUID for your new goal is: <%= @goal_id %></h3>

<%= form_tag({controller: "goals", action: "create"}, method: "post") do %>
  <%= hidden_field_tag(:goal_id, @goal_id) %>
  <%= submit_tag("Submit goal", class: "btn btn-primary") %>
<% end %>

<p>------------------------------------</p>
<%= link_to 'Back', goals_path, class: "btn btn-default" %>